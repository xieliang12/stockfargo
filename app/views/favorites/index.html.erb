<p id="notice"><%= notice %></p>

<h1>Your Favorites</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <% data = YahooFinance::Client.new.quotes(["#{favorite.stock.symbol}"], [:name]) %>
      <% name = data[0].name %>

      <tr id="favorite_<%= favorite.id %>">
        <td><%= favorite.stock.symbol %></td>
        <td><%= name %></td>
        <td><%= link_to 'Show', favorite %></td>
        <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', new_favorite_path %>
