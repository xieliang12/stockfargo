<%= simple_form_for @portfolio, :remote => request.xhr? do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <button id="new-cancel-btn" class="btn btn-default cancel-btn">Cancel</button>
  </div>
<% end %>
